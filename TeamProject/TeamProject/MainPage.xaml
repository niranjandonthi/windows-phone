<Page
    x:Class="TeamProject.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TeamProject"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Name="MainGrid" Margin="0,0.333,0,-33.333">
        <!--Stack panel for menu display-->
        <StackPanel HorizontalAlignment="Left" Height="275" Margin="10,188,0,0" VerticalAlignment="Top" Width="390">
            <Button Content="Home" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Blue"/>
            <Button x:Name="Btn_start" Content="Start Logging" HorizontalAlignment="Left" VerticalAlignment="Top" Click="Btn_start_Click" Height="102" Width="390" Background="Green"/>
            <Button Content="About Us" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
            <Button Content="Exit" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Red"/>
        </StackPanel>

    </Grid>
</Page>
